//JSDoc Configuration File
{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": [
      "jsdoc",
      "closure"
    ]
  },
  "source": {
    "include": [
      "./"
    ],
    "exclude": [
      "./node_modules/",
      "./test/"
    ],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["plugins/markdown"],
  "markdown": { "tags": ["default"] },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "opts": {
    "encoding": "utf8",
    // same as -e utf8
    "destination": "./doc/",
    // same as -d ./out/
    "recurse": true
    // same as -r
  }
}
